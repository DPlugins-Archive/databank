<style>
	.dashicons {
		height: 20px;
		width: 20px;
		font-size: 20px;
		vertical-align: top;
		text-align: center;
		transition: color 0.1s ease-in;
	}

	.meta-title {
		font-weight: bold;
		margin-top: 5px;
		margin-bottom: 5px;
	}
</style>

<aside id="settings" class="border rounded--s p--m">
	<h3 class="h3">Config</h3>
	{% if snippet.meta %}

		{% if 'scope' in snippet.meta|keys %}
			<div id="scope" class="settings__group">
				<label class="meta-title">Scope</label>

				<div class="inline-block">
					<input readonly disabled type="radio" value="global" {{ snippet.meta['scope'] == 'global' ? 'checked' : '' }}>
					<label>
						<svg class="dashicons" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><rect x="0" fill="none" width="20" height="20"/><g><path d="M9 0C4.03 0 0 4.03 0 9s4.03 9 9 9 9-4.03 9-9-4.03-9-9-9zm3.46 11.95c0 1.47-.8 3.3-4.06 4.7.3-4.17-2.52-3.69-3.2-5 .126-1.1.804-2.063 1.8-2.55-1.552-.266-3-.96-4.18-2 .05.47.28.904.64 1.21-.782-.295-1.458-.817-1.94-1.5.977-3.225 3.883-5.482 7.25-5.63-.84 1.38-1.5 4.13 0 5.57C7.23 7 6.26 5 5.41 5.79c-1.13 1.06.33 2.51 3.42 3.08 3.29.59 3.66 1.58 3.63 3.08zm1.34-4c-.32-1.11.62-2.23 1.69-3.14 1.356 1.955 1.67 4.45.84 6.68-.77-1.89-2.17-2.32-2.53-3.57v.03z"/></g>
						</svg>
						Run snippet everywhere
					</label>
				</div>

				<div class="inline-block">
					<input readonly disabled type="radio" value="admin" {{ snippet.meta['scope'] == 'admin' ? 'checked' : '' }}>
					<label>
						<svg class="dashicons" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><rect x="0" fill="none" width="20" height="20"/><g><path d="M16.68 9.77c-1.34 1.34-3.3 1.67-4.95.99l-5.41 6.52c-.99.99-2.59.99-3.58 0s-.99-2.59 0-3.57l6.52-5.42c-.68-1.65-.35-3.61.99-4.95 1.28-1.28 3.12-1.62 4.72-1.06l-2.89 2.89 2.82 2.82 2.86-2.87c.53 1.58.18 3.39-1.08 4.65zM3.81 16.21c.4.39 1.04.39 1.43 0 .4-.4.4-1.04 0-1.43-.39-.4-1.03-.4-1.43 0-.39.39-.39 1.03 0 1.43z"/></g>
						</svg>
						Only run in administration area
					</label>
				</div>

				<div class="inline-block">
					<input readonly disabled type="radio" value="front-end" {{ snippet.meta['scope'] == 'front-end' ? 'checked' : '' }}>
					<label>
						<svg class="dashicons" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><rect x="0" fill="none" width="20" height="20"/><g><path d="M14.48 11.06L7.41 3.99l1.5-1.5c.5-.56 2.3-.47 3.51.32 1.21.8 1.43 1.28 2.91 2.1 1.18.64 2.45 1.26 4.45.85zm-.71.71L6.7 4.7 4.93 6.47c-.39.39-.39 1.02 0 1.41l1.06 1.06c.39.39.39 1.03 0 1.42-.6.6-1.43 1.11-2.21 1.69-.35.26-.7.53-1.01.84C1.43 14.23.4 16.08 1.4 17.07c.99 1 2.84-.03 4.18-1.36.31-.31.58-.66.85-1.02.57-.78 1.08-1.61 1.69-2.21.39-.39 1.02-.39 1.41 0l1.06 1.06c.39.39 1.02.39 1.41 0z"/></g>
						</svg>
						Only run on site front-end
					</label>
				</div>

				<div class="inline-block">
					<input readonly disabled type="radio" value="single-use" {{ snippet.meta['scope'] == 'single-use' ? 'checked' : '' }}>
					<label>
						<svg class="dashicons" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><rect x="0" fill="none" width="20" height="20"/><g><path d="M10 2c4.42 0 8 3.58 8 8s-3.58 8-8 8-8-3.58-8-8 3.58-8 8-8zm0 14c3.31 0 6-2.69 6-6s-2.69-6-6-6-6 2.69-6 6 2.69 6 6 6zm-.71-5.29c.07.05.14.1.23.15l-.02.02L14 13l-3.03-3.19L10 5l-.97 4.81h.01c0 .02-.01.05-.02.09S9 9.97 9 10c0 .28.1.52.29.71z"/></g>
						</svg>
						Only run once
					</label>
				</div>

			</div>
		{% endif %}


		{% if 'priority' in snippet.meta|keys %}
			<div class="settings__group">
				<label class="meta-title">Priority</label>
				<input readonly disabled class="inline-block input" type="text" value="{{ snippet.meta['priority'] }}">
			</div>
		{% endif %}

        {% if 'tags' in snippet.meta|keys %}
            <div class="settings__group">
                <label for="">Tags</label>
                <div class="tags-wrap input">
                    {% for tag in snippet.meta['tags'] %}
                        <span class="tag">{{ tag|escape('html') }}</span>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

	{% endif %}
</aside>
